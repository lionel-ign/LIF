	month = jul,
	year = {2019},
	note = {Number: 7},
	keywords = {LiDAR, forest inventory, stem diameter, CompuTree, diameter at breast height (DBH), SimpleTree, STEP algorithm, terrestrial laser scanner},
	pages = {599},
	file = {Full Text PDF:E\:\\Zotero\\storage\\VTI4FUCF\\Ravaglia et al. - 2019 - Comparison of Three Algorithms to Estimate Tree St.pdf:application/pdf;Snapshot:E\:\\Zotero\\storage\\ZBEJT6EF\\599.html:text/html},
