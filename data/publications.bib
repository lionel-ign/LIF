	author = {Lacopetti, Giovanni and Selvi, Federico and Bussotti, Filippo and Pollastrini, Martina and Jucker, Tommaso and Bouriaud, Olivier},
	year = {2023},
	note = {\_eprint: https://nsojournals.onlinelibrary.wiley.com/doi/pdf/10.1111/oik.08875},
	keywords = {drought, FunDivEurope, species richness, stress, temperature, tree growth, tree rings},
	pages = {e08875},
	file = {Snapshot:E\:\\Zotero\\storage\\4Q6GLS58\\oik.html:text/html;Texte intégral:E\:\\Zotero\\storage\\DSAQ7N7V\\Iacopetti et al. - 2023 - Tree diversity and identity modulate the growth re.pdf:application/pdf},
